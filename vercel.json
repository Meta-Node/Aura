{
  "rewrites": [
    {
      "source": "/brightid/:path*",
      "destination": "https://recovery.brightid.org/:path*"
    },
    {
      "source": "/brightid/:path*/",
      "destination": "https://recovery.brightid.org/:path*/"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/([^.]*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*\\.js)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
